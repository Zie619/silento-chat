{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "../dist/server",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": false,
    "removeComments": true
  },
  "include": [
    "*.ts"
  ],
  "exclude": [
    "node_modules",
    "../dist"
  ]
} 