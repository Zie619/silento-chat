{
  "name": "anonymous-chat-app",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && node --loader ts-node/esm --experimental-specifier-resolution=node index.ts",
    "client": "vite",
    "build": "vite build && npm run build:server",
    "build:server": "cd server && tsc -p tsconfig.json",
    "build:frontend": "vite build",
    "start": "cd server && node --loader ts-node/esm --experimental-specifier-resolution=node index.ts",
    "start:prod": "NODE_ENV=production node dist/server/index.js",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["anonymous", "chat", "p2p", "websocket"],
  "author": "",
  "license": "ISC",
  "description": "Anonymous peer-to-peer chat application",
  "dependencies": {
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.2",
    "@types/node": "^22.15.23",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.5",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-react": "^4.5.0",
    "concurrently": "^9.1.2",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "ws": "^8.18.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
